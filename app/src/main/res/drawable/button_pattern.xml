<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#6C2DC7"
                android:endColor="#6C2DC7"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#6C2DC7" />
            <corners
                android:radius="200dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>

    <!-- pressed -->


    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#6C2DC7"
                android:endColor="#6C2DC7"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#6C2DC7" />
            <corners
                android:radius="200dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>
    <!-- focused -->


    <item>
        <shape>
            <gradient
                android:startColor="#6C2DC7"
                android:endColor="#6C2DC7"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#6C2DC7" />
            <corners
                android:radius="200dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>
    <!-- default -->
</selector>