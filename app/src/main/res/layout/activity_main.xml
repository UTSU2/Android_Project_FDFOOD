<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/dish"
            android:padding="5dp"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scdream5"
            android:text="맛.ZIP"
            android:textSize="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6C2DC7"
            android:text="음식 종류 고르기"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="@font/scdream5"
            android:padding="5dp"
            android:importantForAccessibility="no" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="bottom|center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:gravity="bottom|center">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_pattern"
                android:text="한식"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/scdream5"
                android:padding="5dp"
                android:layout_marginRight="70dp"
                android:importantForAccessibility="no" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_pattern"
                android:text="일식"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/scdream5"
                android:padding="5dp"
                android:importantForAccessibility="no" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_pattern"
                android:text="중식"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/scdream5"
                android:padding="5dp"
                android:layout_marginLeft="70dp"
                android:importantForAccessibility="no" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/korea"
                android:padding="5dp"
                android:src="@drawable/koreafood"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/japan"
                android:padding="5dp"
                android:src="@drawable/japanfood"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/china"
                android:src="@drawable/chinafood"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/western"
                android:padding="5dp"
                android:src="@drawable/westernfood" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/others"
                android:padding="10dp"
                android:src="@drawable/guitar" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_pattern"
                android:text="양식"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/scdream5"
                android:padding="5dp"
                android:layout_marginRight="70dp"
                android:importantForAccessibility="no" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_pattern"
                android:text="기타"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/scdream5"
                android:padding="5dp"
                android:importantForAccessibility="no" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnRemove"
            android:text="맛집 삭제"
            android:textSize="18dp"
            android:fontFamily="@font/scdream5"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:background="@drawable/button_pattern"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnRecommend"
            android:text="맛집 추천"
            android:textSize="18dp"
            android:fontFamily="@font/scdream5"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:background="@drawable/button_pattern"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnAdd"
            android:text="맛집 추가"
            android:textSize="18dp"
            android:fontFamily="@font/scdream5"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:background="@drawable/button_pattern"/>
    </LinearLayout>



</LinearLayout>